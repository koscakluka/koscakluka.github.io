---
import "@/styles/globals.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<script is:inline>
	const getThemePreference = () => {
		if (
			typeof localStorage !== "undefined" &&
			localStorage.getItem("theme")
		) {
			return localStorage.getItem("theme");
		}
		return window.matchMedia("(prefers-color-scheme: dark)").matches
			? "dark"
			: "light";
	};
	const isDark = getThemePreference() === "dark";
	document.documentElement.classList[isDark ? "add" : "remove"]("dark");

	if (typeof localStorage !== "undefined") {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains("dark");
			localStorage.setItem("theme", isDark ? "dark" : "light");
		});
		observer.observe(document.documentElement, {
			attributes: true,
			attributeFilter: ["class"],
		});
	}
</script>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative bg-background min-h-[100dvh] h-fit md:pb-20 pb-24">
		<slot />
		<div class="absolute bottom-0 left-0 right-0 w-full h-16 md:12">
			<div
				class="flex flex-col md:flex-row justify-between items-center gap-2 h-full max-w-[77ch] mx-auto px-4 py-2 text-muted-foreground/60"
			>
				<p class="text-left text-sm">
					Â© {new Date().getFullYear()} Luka. All rights reserved.
				</p>
				<p class="text-right text-sm">
					Source available on <a
						class="text-primary hover:underline"
						href="https://github.com/koscakluka/koscakluka.github.io"
						>GitHub</a
					>
				</p>
			</div>
		</div>
	</body>
</html>
